<ComboBoxItem x:Class="bayoen.library.Metro.Controls.MetroChromaComboBoxItem"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns:local="clr-namespace:bayoen.library.Metro.Controls"
              
              Background="Black">

    <ComboBoxItem.Content>
        <StackPanel Orientation="Horizontal"
                Margin="0">

            <iconPacks:PackIconModern Kind="_3dObj"
                                      Height="12" Width="12" Margin="5,0"
                                      Foreground="{Binding IconForeground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MetroChromaComboBoxItem}}"
                                      VerticalAlignment="Center"/>

            <TextBlock Foreground="White"
                       Text="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MetroChromaComboBoxItem}}"
                       Margin="2"
                       VerticalAlignment="Center"/>

        </StackPanel>
    </ComboBoxItem.Content>

</ComboBoxItem>
