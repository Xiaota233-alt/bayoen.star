<windows:BaseWindow x:Class="bayoen.star.Windows.MainWindow"                    
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                                       
                    xmlns:windows="clr-namespace:bayoen.library.Metro.Windows"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:mtc="http://metro.mahapps.com/winfx/xaml/controls"
                    
                    Title="bayoen-star"
                    
                    Height="450" Width="800"                    
                    ResizeMode="NoResize">

    <Grid>
        <StackPanel x:Name="PPTOnIconPanel" Orientation="Horizontal" Visibility="Hidden">
            <iconPacks:PackIconModern Height="18" Width="18" Margin="4" Kind="CameraFlashSelected" VerticalAlignment="Center"/>
            <TextBlock Text="PPT On"  VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="PPTOffIconPanel" Orientation="Horizontal" Visibility="Visible">
            <iconPacks:PackIconModern Height="18" Width="18" Margin="4" Kind="CameraFlashOffSelected" VerticalAlignment="Center"/>
            <TextBlock Text="PPT Off" VerticalAlignment="Center"/>
        </StackPanel>
        
    </Grid>

    <windows:BaseWindow.RightWindowCommands>
        <mtc:WindowCommands>
            <mtc:WindowCommands.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Height" Value="15"/>
                    <Setter Property="Margin" Value="7"/>
                    <Setter Property="Fill" Value="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>

                <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                    <Setter Property="Margin" Value="2,3,2,3"/>
                    <Setter Property="TextAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </mtc:WindowCommands.Resources>

            <Button x:Name ="MenuButton" Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="SettingsOutline"
                                                VerticalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource Main-Menu-String}" FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </mtc:WindowCommands>
    </windows:BaseWindow.RightWindowCommands>

</windows:BaseWindow>
