<Grid x:Class="bayoen.star.Controls.MiniScoreContainer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="clr-namespace:bayoen.library.Metro.Controls">

    <Grid.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MetroTextBlock}">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>
    </Grid.Resources>

    <StackPanel x:Name="ScorePanel"
                Orientation="Horizontal">
        <controls:MetroImage x:Name="SymbolImage"
                         Height="68" Width="406" Margin="0"
                         VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <TextBlock x:Name="ScoreBlock"
               Text=":"
               FontSize="30" Margin="0,0,0,8"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
    </StackPanel>
</Grid>
