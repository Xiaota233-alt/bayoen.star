<tb:TaskbarIcon x:Class="bayoen.star.TrayIcon"                
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:tb="http://www.hardcodet.net/taskbar"
                
                TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick">

    <tb:TaskbarIcon.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="MenuHeader" IsEnabled="False"/>
            <Separator/>
            <MenuItem Header="Show" Click="ShowMenuItem_Click"/>
            <MenuItem Header="Setting" Click="SettingMenuItem_Click"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Goal"/>
                <Button Content="Set" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Content="Reset" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
            <Separator/>
            <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
        </ContextMenu>
    </tb:TaskbarIcon.ContextMenu>


</tb:TaskbarIcon>
